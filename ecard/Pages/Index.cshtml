@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<html>

<head>
     
     
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>


<body>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <a href="https://www.huffingtonpost.com/shannon-kaiser/3-unexpected-ways-to-find_b_5176511.html"> <img src="~/images/woodland-road-falling-leaf-natural-38537 (1).jpeg" /></a>

                <div class="carousel-caption">
                    <h3>Lifepath</h3>
                    <p>Know Your Purpose</p>
                </div>
            </div>

            <div class="item">
                <a href="https://www.powerofpositivity.com/11-signs-youre-experiencing-a-shift-in-consciousness"><img src="~/images/universe.jpg" />
                    <div class="carousel-caption">
                        <h3>Shift</h3>
                        <p>In Consciousness</p>
                    </div>
</div>
            <div class="item">
               
                <a href="https://www.choosechicago.com/things-to-do/top-chicago-bucket-lists/the-ultimate-chicago-bucket-list/"><img src="~/images/chicago-illinois-skyline-skyscrapers-161963.jpeg"  alt="Chicago">
                    <div class="carol-captive">
                        <h3>What To Do In Chicago</h3>
                        <p>Bucket List</p>
                    </div>
</div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>































    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</body>


</html>